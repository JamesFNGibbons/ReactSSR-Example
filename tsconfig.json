{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": true,
    "sourceMap": false,
    
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, 

    "outDir": "./dist",
    "rootDir": "./src",

    "skipLibCheck": true,
    "allowJs": true,
    // "checkJs": true,
    
    "strict": false,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist/*", "src/static"],
  "lib": ["es6"]
}